<Window x:Class="Codartis.SoftVis.Util.UI.Wpf.Controls.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Codartis.SoftVis.Util.UI.Wpf.ViewModels"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation ="CenterOwner"
        WindowState="Normal"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        FontSize="12"
        Title="{Binding Title}"
        d:DataContext="{d:DesignInstance {x:Type viewModels:ProgressWindowViewModel}}">

    <DockPanel Margin="5">
        <TextBlock DockPanel.Dock="Top" Text="{Binding Text}" MinWidth="300" MaxWidth="600"/>
        <ProgressBar DockPanel.Dock="Top" Margin="0,5,0,5"
                     Height="5"
                     Minimum="0" Maximum="1" Value="{Binding ProgressValue}"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button  Width="100" Click="Cancel_OnClick">Cancel</Button>
        </StackPanel>
    </DockPanel>
</Window>

<UserControl x:Class="Codartis.SoftVis.VisualStudioIntegration.Presentation.DiagramToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:softvis="clr-namespace:Codartis.SoftVis.Rendering.Wpf;assembly=SoftVis.Diagramming"
             xmlns:this="clr-namespace:Codartis.SoftVis.VisualStudioIntegration.Presentation"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="DiagramToolWindow">
        
    <softvis:DiagramCanvasControl x:Name="DiagramCanvasControl" 
                                  Diagram="{Binding}" 
                                  FontSize="{Binding Path=FontSize, RelativeSource={RelativeSource AncestorType={x:Type this:DiagramToolWindowControl}}}" />

</UserControl>

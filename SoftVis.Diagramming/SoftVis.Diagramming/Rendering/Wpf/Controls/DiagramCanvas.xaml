<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Codartis.SoftVis.Rendering.Wpf.Controls">

    <Style TargetType="{x:Type controls:DiagramCanvas}">
        <Setter Property="MinScale" Value="0.3"/>
        <Setter Property="MaxScale" Value="3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DiagramCanvas}">
                    <Canvas x:Name="PART_Canvas" Background="Beige" >
                        <controls:PanAndZoomControl x:Name="PART_PanAndZoomControl" 
                                                    Canvas.Top="10" Canvas.Left="10" 
                                                    Height="100" Width="100" 
                                                    DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                                    ZoomMin="{Binding MinScale}" ZoomMax="{Binding MaxScale}" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
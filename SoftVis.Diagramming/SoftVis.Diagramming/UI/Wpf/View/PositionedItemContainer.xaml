<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:view="clr-namespace:Codartis.SoftVis.UI.Wpf.View"
                    mc:Ignorable="d">

    <Style x:Key="PositionedItemContainerBaseStyle" TargetType="{x:Type view:PositionedItemContainer}" >
        <Setter Property="Canvas.Left" Value="{Binding Path=X, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="Canvas.Top" Value="{Binding Path=Y, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>

</ResourceDictionary>
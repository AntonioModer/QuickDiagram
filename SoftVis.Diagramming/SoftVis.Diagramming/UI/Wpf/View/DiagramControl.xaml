<UserControl x:Class="Codartis.SoftVis.UI.Wpf.View.DiagramControl"
             x:Name="ThisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Codartis.SoftVis.UI.Wpf.View"
             xmlns:viewModel="clr-namespace:Codartis.SoftVis.UI.Wpf.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance {x:Type viewModel:DiagramViewModel}}"

             ClipToBounds="True"
             SnapsToDevicePixels="False"
             RenderOptions.EdgeMode="Unspecified"
             RenderOptions.ClearTypeHint="Enabled"
             TextOptions.TextRenderingMode="Auto"
             TextOptions.TextHintingMode="Auto"
             TextOptions.TextFormattingMode="Ideal">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Canvas x:Name="Canvas">
        <local:DiagramViewportControl x:Name="TheDiagramViewportControl"
                                      DataContext="{Binding Path=DiagramViewportViewModel}"
                                      ViewportDescriptor="{Binding Path=ViewportViewModel.ViewportDescriptor}"
                                      ViewportResizeCommand="{Binding Path=ViewportViewModel.ResizeCommand}"
                                      ViewportPanCommand="{Binding Path=ViewportViewModel.PanCommand}"
                                      ViewportZoomCommand="{Binding Path=ViewportViewModel.ZoomCommand}"
                                      ViewportZoomToContentCommand="{Binding Path=ViewportViewModel.ZoomToContentCommand}"
                                      Width="{Binding Path=ActualWidth, ElementName=Canvas}" 
                                      Height="{Binding Path=ActualHeight, ElementName=Canvas}" />

        <local:EntitySelectorControl DataContext="{Binding Path=RelatedEntitySelectorViewModel}"
                                     Width="{Binding Path=Width}" 
                                     Height="{Binding Path=Height}"
                                     Canvas.Top="{Binding Path=Top}" 
                                     Canvas.Left="{Binding Path=Left}"
                                     Visibility="{Binding Path=IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     HandleOrientation="{Binding Path=HandleOrientation}"/>
    </Canvas>
</UserControl>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:view="clr-namespace:Codartis.SoftVis.UI.Wpf.View"
                    mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SoftVis.Diagramming;component/UI/Wpf/View/PositionedItemContainer.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="AnimatedPositionedItemContainerBaseStyle" 
           TargetType="{x:Type view:AnimatedPositionedItemContainer}" 
           BasedOn="{StaticResource PositionedItemContainerBaseStyle}">
        <Setter Property="Canvas.Left" Value="{Binding Path=AnimatedX, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="Canvas.Top" Value="{Binding Path=AnimatedY, RelativeSource={RelativeSource Self}}"/>
    </Style>

</ResourceDictionary>